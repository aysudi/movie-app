{
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)\\.(js|css|json|png|jpg|jpeg|gif|svg|ico|woff|woff2|ttf|otf|eot|ttf|mp4|webm|wav|mp3|ogg|m4a|aac|opus|html)$",
      "dest": "/$1"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "rewrites": [
    { "source": "/index", "destination": "/index.html" },
    { "source": "/favorites", "destination": "/favorites.html" },
    { "source": "/edit", "destination": "/edit.html" },
    { "source": "/detail", "destination": "/detail.html" },
    { "source": "/add", "destination": "/add.html" }
  ]
}
